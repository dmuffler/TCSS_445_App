<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/uw_white_color"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/instructorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FirstName LastName"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/uw_black_color"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/instructorPositionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Position Title"
        android:textColor="@color/uw_dark_gray_color"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/instructorDepartmentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Department Name"
        android:textColor="@color/uw_dark_gray_color"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="35dp" />

</LinearLayout>